{
  "name": "Strapi",
  "description": "Strapi Heroku 1 click deploy button",
  "keywords": [
    "strapi",
    "heroku"
  ],
  "repository": "https://github.com/strapi/strapi-heroku-template",
  "addons": [
    "heroku-postgresql:essential-0"
  ],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "CLOUDINARY_NAME": {
      "description": "Cloud name of your Cloudinary account",
      "required": "true"
    },
    "CLOUDINARY_KEY": {
      "description": "Cloudinary API Key",
      "required": "true"
    },
    "CLOUDINARY_SECRET": {
      "description": "Cloudinary API Secret",
      "required": "true"
    }
  }
}